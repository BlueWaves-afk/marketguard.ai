{
  "manifest_version": 3,
  "name": "marketguard.ai",
  "version": "0.1.0",
  "description": "Verify advisors, flag scam-language, and check UPI handlesâ€”right on the page.",
  "action": { "default_title": "marketguard.ai" },
  "background": { "service_worker": "background.js" },
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": [
    "http://localhost:8001/*",
    "http://localhost:8002/*",
    "http://localhost:8003/*"
  ],
  "web_accessible_resources": [
  {
    "resources": ["assets/*"],
    "matches": ["<all_urls>"]
  }
],
"content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": [
      "scripts/new/constants.js",
      "scripts/legacy/01-storage.js",
      "scripts/legacy/02-helpers.js",
      "scripts/legacy/03-highlight.js",
      "scripts/new/services.js",
      "scripts/new/settings.js",
      "scripts/new/registry.js",
      "scripts/new/risk-memory.js",
      "scripts/new/explain.js",
      "scripts/new/media.js",
      "scripts/new/fab.js",
      "scripts/new/overlay-shell.js",
      "scripts/new/overlay.js",
      "scripts/new/main.js"
    ],
    "css": ["content.css"],   
    "run_at": "document_idle"
  }
]

}
