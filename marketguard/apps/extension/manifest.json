{
  "manifest_version": 3,
  "name": "marketguard.ai",
  "version": "0.1.0",
  "description": "Verify advisors, flag scam-language, and check UPI handlesâ€”right on the page.",

  "action": {
    "default_title": "marketguard.ai"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "http://localhost:8001/*",
    "http://localhost:8002/*",
    "http://localhost:8003/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
